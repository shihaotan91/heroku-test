<h2>Create an account</h2>

<form action="/user/login" method="post">

  <div class="form-group">
    <label for="user">Username</label>
    <input type="text" class="form-control" id="user" name="user[local][name]" placeholder="Username">
  </div>

  <div class="form-group">
    <label for="password">Password</label>
    <input type="text" class="form-control" id="password" name="user[local][password]" placeholder="Password">
  </div>

<button type="submit" class="btn btn-default">Log me in!</button>
</form>

<br>

<% if(message.length > 0) { %>
  <h2>FLASH FOUND</h2>
  <div class="alert alert-danger">
    <%= message %>
  </div>
<% } %>
